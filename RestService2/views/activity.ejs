<%- include('components/header') %>
<script>
  $(document).ready(function(){
    getAllUserActivities();
    getAllSports();
  });
</script>
<button type="button" class="btn btn-info" data-toggle="modal" data-target="#addActivityModal">Add Activity</button>
<table class="table">
  <thead>
    <tr>
      <th>Activity Name</th>
      <th>Intensity</th>
      <th>Calories Burnt</th>
      <th>Date</th>
      <th>Length</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody id="activityTableBody">
    <tr>
      <td>
        Loading
      </td>
    </tr>
  </tbody>
</table>
<!--Add Activity Modal -->
<div id="addActivityModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <!-- Modal content-->
    <form onsubmit='return false;'>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Add a New Activity</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <label>Activity Name</label>
            <input type="text" name="activityName" class="form-control ui-widget" placeholder="Activity Name" id="activityName" />
        </div><!-- form-group -->
        <div class="form-group">
          <!--<label>Meal Type</label>
          <input type="text" name="mealType" class="form-control" placeholder="Meal Type" id="mealType" />-->
          <label for="intensity">Intensity</label>
          <select class="form-control" name="intensity" id="intensity">
            <option>Low</option>
            <option>Medium</option>
            <option>High</option>
          </select>
        </div><!-- form-group -->
        <div class="form-group">
            <label>Calories Burnt</label>
            <input type="number" name="caloriesBurnt" class="form-control" placeholder="Calories Burnt" id="caloriesBurnt" />
        </div><!-- form-group -->
        <div class="form-group">
            <label>Length (Minutes)</label>
            <input type="number" name="length" class="form-control" placeholder="Length (Minutes)" id="length" />
        </div><!-- form-group -->
        <div class="form-group">
            <label>Date</label>
            <input type="date" name="date" class="form-control" id="date" />
        </div><!-- form-group -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" onclick='newActivitySubmit();' class="btn btn-primary">Add Activity</button>
      </div>
      </form>
    </div>
  </div>
</div>

<!-- Modal -->
<div id="editActivityModal" class="modal fade" role="dialog">
  <div class="modal-dialog">
    <form onsubmit='return false;'>
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <h4 class="modal-title">Edit Activity</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
            <label>Activity Name</label>
            <input type="text" name="editActivityName" class="form-control" placeholder="Activity Name" id="editActivityName" />
        </div><!-- form-group -->
        <div class="form-group">
          <!--<label>Meal Type</label>
          <input type="text" name="mealType" class="form-control" placeholder="Meal Type" id="mealType" />-->
          <label for="editIntensity">Intensity</label>
          <select class="form-control" name="editIntensity" id="editIntensity">
            <option>Low</option>
            <option>Medium</option>
            <option>High</option>
          </select>
        </div><!-- form-group -->
        <div class="form-group">
            <label>Calories Burnt</label>
            <input type="number" name="editCaloriesBurnt" class="form-control" placeholder="Calories Burnt" id="editCaloriesBurnt" />
        </div><!-- form-group -->
        <div class="form-group">
            <label>Length (Minutes)</label>
            <input type="number" name="editLength" class="form-control" placeholder="Length (Minutes)" id="editLength" />
        </div><!-- form-group -->
        <div class="form-group">
            <label>Date</label>
            <input type="date" name="editDate" class="form-control" id="editDate" />
        </div><!-- form-group -->
      </div>
      <div class="modal-footer">
        <input type="hidden" id="editActivityId" name="activity_id">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        <button type="submit" onclick='editActivitySubmit();' class="btn btn-primary">Edit Activity</button>
      </div>
      </form>
    </div>

  </div>
</div>
<%- include('components/footer') %>
