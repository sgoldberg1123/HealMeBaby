<%- include('header') %>
<div class="row">
  <% if (message.length > 0) { %>
      <div class="alert alert-danger"><%= message %></div>
  <% } else { %>
    <div class="alert alert-danger">Warning: Not using SSL/TLS</div>
    <% } %>
      <form action="/login" method="post">
        <div class="form-group">
            <label>Email Address</label>
            <input type="email" name="email" class="form-control" placeholder="Email Address" id="emailLogin" />
        </div><!-- form-group -->

        <div class="form-group">
            <label>Password</label>
            <input type="password" name='password' class="form-control" placeholder="Password" id="passwordLogin" />
        </div><!-- form-group -->
        <button type="submit" class="btn btn-primary">Login</button>
      </form>
</div><!-- row -->
<%- include('footer') %>
